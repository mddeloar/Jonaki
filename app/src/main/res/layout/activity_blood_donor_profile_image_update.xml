<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:weightSum="3"
    android:gravity="center"
    tools:context="com.example.mddeloarhossain.jonaki.BloodDonorProfileImageUpdateActivity">

    <TextView
        android:id="@+id/updateNameId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="Md. Deloar Hossain"
        android:layout_marginBottom="25dp"
        />

    <Button
        android:id="@+id/chooseUpdateImageButton"
        android:background="@drawable/buttonstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Image"
        android:drawableLeft="@drawable/ic_menu_gallery"
        android:drawablePadding="15dp"


        />


    <ImageView
        android:id="@+id/imageUpdateId"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        />

    <ProgressBar
        android:id="@+id/progressbarId"
        android:layout_weight="0.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

    <Button
        android:id="@+id/cancelImageUpdateButton"
        android:background="@drawable/buttonstyle"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_margin="10dp"
        />

        <Button
            android:id="@+id/saveImageUpdateButton"
            android:background="@drawable/buttonstyle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_margin="10dp"
            />
    </LinearLayout>
</LinearLayout>
